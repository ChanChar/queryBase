<div class="row user-info">

  <div class="small-4 columns text-center">
    <% if (user.escape('image_url')) { %>
      <img src="<%= user.escape('image_url') %>" class="profile-image">
    <% } else { %>
      <img src="http://placehold.it/100x100" class="profile-image">
    <% } %>
  </div>

  <div class="small-8 columns">
    <div class="row">
      <h5 class='username'><%= user.escape('username') %></h5>
    </div>
    <div class="row inline-list">
      <li class='user-points'>Points: <%= user.escape('points') %></li>
      <li class='user-badge-number'>Badges: <%= user.escape('num_badges') %></li>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <ul class='inline-list user-badges'>
    <% user.earned_badges().each(function (badge) { %>
      <li><a href="#badges"><img class='earned-badge-item' src="<%= badge.escape('image_url') %>"></a></li>
    <% }); %>
  </ul>
</div>
