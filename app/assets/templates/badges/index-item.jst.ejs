<div class="badge-item">
  <div class="row">

    <div class="badge-details small-4 columns text-center">

      <div class="row">
        <img class='badge-image' src="<%= badge.escape('image_url') %>"/>
      </div>

      <div class="row">
        <h3 class='badge-title'><%= badge.escape('title') %></h3>
      </div>

    </div>

    <div class="badge-description small-8 columns">
      <p><%= badge.escape('description') %></p>
    </div>

  </div>

</div>
